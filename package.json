{
  "name": "web-components",
  "version": "1.0.0",
  "description": "React web components monorepo",
  "main": "index.js",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "pi": "lerna exec --stream -- npm i",
    "start:mongo": "docker run --rm -d -p 27017:27017 --name mongo mongo",
    "prepare:ejs": "lerna run --scope @krupnik/fe* build:client",
    "start": "lerna run --parallel start",
    "prebuild": "lerna exec -- rimraf dist",
    "build": "lerna run --stream build",
    "lint": "lerna run --stream lint",
    "test": "lerna run --parallel test",
    "deploy": "lerna publish",
    "compose:dev:up": "docker-compose -f docker-compose.dev.yml up",
    "compose:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "compose:prod:up": "docker-compose up",
    "compose:prod:down": "docker-compose up",
    "storybook": "start-storybook -p 6001",
    "prebuild-storybook": "rimraf .storybook/dist",
    "build-storybook": "build-storybook -o .storybook/dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yurikrupniktools/web-components.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yurikrupniktools/web-components/issues"
  },
  "homepage": "https://github.com/yurikrupniktools/web-components#readme",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-modules-commonjs": "^7.5.0",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@storybook/react": "^5.1.9",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "css-hot-loader": "^1.4.4",
    "css-loader": "^3.1.0",
    "docdash": "^1.1.1",
    "eslint": "^6.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-loader": "^3.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsdoc": "^15.8.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "generate-json-webpack-plugin": "^0.3.1",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "jest-runner-eslint": "^0.7.4",
    "jsdoc": "^3.6.3",
    "jsdoc-webpack-plugin-v2": "^2.0.2",
    "lerna": "^3.16.4",
    "less": "^3.10.1",
    "less-loader": "^5.0.0",
    "lodash": "^4.17.15",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "nodemon-webpack-plugin": "^4.0.8",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "postcss-plugin": "^1.0.0",
    "raw-loader": "^3.1.0",
    "rollup": "^1.20.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "swagger-jsdoc-webpack-plugin": "^1.0.0",
    "terser-webpack-plugin": "^1.3.0",
    "webpack": "^4.36.1",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.7",
    "webpack-dev-server": "^3.7.1",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "collectCoverage": true,
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    }
  },
  "postcss": {
    "map": false,
    "plugins": {
      "autoprefixer": {}
    }
  }
}
